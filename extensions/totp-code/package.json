{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "totp-code",
  "title": "TOTP code",
  "description": "Show TOTP Code",
  "icon": "command-icon.png",
  "author": "danshan",
  "categories": [
    "Security"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Show TOTP Code",
      "description": "Show TOTP code for each website",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "authFile",
      "description": "OTP config file location",
      "type": "file",
      "required": true,
      "title": "OTP config file"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.54.0",
    "otpauth": "^9.1.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
